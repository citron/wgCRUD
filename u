#!/bin/bash
# CRUD.sh 'u' (update) - Edit/update existing files

# Source library
SCRIPT_DIR="$(dirname "${BASH_SOURCE[0]}")"
source "$SCRIPT_DIR/crudsh-lib.sh"

# Load config
load_config

if [ $# -eq 0 ]; then
    echo "Usage: u <file>"
    exit 1
fi

FILE="$1"

if [ ! -f "$FILE" ]; then
    echo "Error: File '$FILE' not found"
    exit 1
fi

# Get MIME type
MIME=$(file --mime-type -b "$FILE")

# Try to get command from config first
if [ -n "$CRUDSH_CONFIG" ]; then
    CMD=$(get_command "$MIME" "u" "$FILE")
    if [ -n "$CMD" ]; then
        eval "$CMD"
        exit 0
    fi
fi

# Fallback to default editor
${EDITOR:-vi} "$FILE"
